<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_none"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <com.chrischeng.pageindicator.CirclePageIndicator
        android:id="@+id/cpi_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_none"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_swipe"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/vp_none"
        android:layout_marginTop="30dp" />

    <com.chrischeng.pageindicator.CirclePageIndicator
        android:id="@+id/cpi_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_swipe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_jelly"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/vp_swipe"
        android:layout_marginTop="30dp" />

    <com.chrischeng.pageindicator.CirclePageIndicator
        android:id="@+id/cpi_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_jelly"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
